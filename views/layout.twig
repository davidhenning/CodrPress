<!DOCTYPE html>
<html>
    <head>
        {% set blogName = config.DbConfig.blog_title|default('CodrPress') %}
        <title>{% block title %} - {{ blogName }}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
        <link href="{{ app.url_generator.generate('feed') }}" type="application/atom+xml" rel="alternate" title="Sitewide ATOM Feed">
        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/web/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/web/css/codrpress.css">
        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/web/css/responsive.css">
        <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/web/css/pygments-monokai.css">
    </head>
    <body data-basepath="{{ app.request.basepath }}">
        <div class="container">
            <header>
                <a href="{{ app.url_generator.generate('home') }}">{{ blogName }}</a>
            </header>
            <div class="row">
                <div class="span7">
                    {% block body %}{% endblock %}
                </div>
                <div class="span3 offset2">
                    {% if tags is defined %}
                        <section id="tags">
                            {% for tag in tags %}
                                <span class=""><a href="{{ app.url_generator.generate('tag', {'tag': tag.name}) }}">{{ tag.name }}</a></span>
                            {% endfor %}
                        </section>
                    {% endif %}
                </div>
            </div>
            <footer>
                <a href="https://github.com/MadCatme/CodrPress">powered by CodrPress</a>
                {% if pages is defined %}
                    |
                    {% for page in pages %}
                        <a href="{# page.getLink() #}">{{ page.title }}</a> {% if loop.last == false %} | {% endif %}
                    {% endfor %}
                {% endif %}
            </footer>
        </div>
        <script type="application/javascript" src="{{ app.request.basepath }}/web/js/jquery-1.8.2.min.js"></script>
        <script type="application/javascript" src="{{ app.request.basepath }}/web/js/bootstrap.min.js"></script>
    </body>
</html>