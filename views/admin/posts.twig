{% extends 'admin/layout.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
            </tr>
        </thead>
        {% for post in posts %}
            {% set postUrl = app.url_generator.generate('admin_post', {'id': post._id}) %}
            <tr>
                <td>
                    {{ post.created_at|date('c') }}
                </td>
                <td>
                    <a href="{{ postUrl }}">{{ post.title }}</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

