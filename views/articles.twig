{% import 'tools.twig' as tools %}
{% for post in posts %}
    <article>
        <h1>
            {% if page == false %}<a href="{{ post.getLink() }}">{% endif %}
                {{ post.title }}
            {% if page == false %}</a>{% endif %}
        </h1>
        {% if page == false %}
            <ul class="meta">
                <li>
                    <i class="icon-time"></i> <time>{{ tools.niceDate(post.created_at) }}</time>
                </li>
                {% if post.tags is defined %}
                    <li>
                        <i class="icon-tags"></i> {% for tag in post.tags %}<a href="{{ app.url_generator.generate('tag', {'tag': tag}) }}">{{ tag }}</a>{% if loop.last == false %}, {% endif %}{% endfor %}
                    </li>
                    {% endif %}
                <li>
                    <i class="icon-comment"></i> <a href="{{ post.getLink() }}#comments">1 Kommentar</a>
                </li>
            </ul>
        {% endif %}
        {{ post.getBody()|raw }}
    </article>
{% endfor %}