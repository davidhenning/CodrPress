{% import 'tools.twig' as tools %}
{% for post in posts %}
    <article>
        <time>{{ tools.niceDate(post.created_at) }}</time>
        <h1>
            {% if page == false %}<a href="{{ post.getLink() }}">{% endif %}
                {{ post.title }}
            {% if page == false %}</a>{% endif %}
        </h1>

        <ul class="meta">
            {% if post.tags is defined %}
                <li class="tags">
                    {% for tag in post.tags %}
                        <a href="{{ app.url_generator.generate('tag', {'tag': tag}) }}">
                            <span class="label label-warning">{{ tag }}</span>
                        </a>
                    {% endfor %}
                </li>
            {% endif %}
        </ul>
        <div class="content">
            {{ post.getBody()|raw }}
        </div>
    </article>
{% endfor %}