{% extends 'layout.twig' %}
{% block title %}Home {{  parent() }}{% endblock %}

{% block body %}

    <h1>CodrPress</h1>

    <div class="articles">
        {% for post in posts %}
            <article>
                <h2><a href="{{ post.getLink() }}">{{ post.title }}</a></h2>
                <p>{{ post.created|date('d.m.Y') }}</p>
                <div>
                    {{ post.body }}
                </div>
            </article>
        {% endfor %}
    </div>

{% endblock %}